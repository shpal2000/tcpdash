{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build tlspack",
            "type": "shell",
            "args": ["-C", "build"],
            "command": "ninja",
            "group": "build",
            "problemMatcher" : {
                 "base" : "$gcc",
                 "fileLocation" : ["", "${workspaceFolder}/tlspack/build"]
            },

            "options": {
                "cwd": "${workspaceFolder}/tlspack"
            },

            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            }


        }
    ]
}